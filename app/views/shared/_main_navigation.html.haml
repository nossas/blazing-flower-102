%nav#primary
  %ul
    %li
      = link_to('SOBRE NÓS', page_path(:id => 'sobre_nos'), :class => "top_level #{(@current_page ==  'quem_somos' ? 'selected' : nil)}")+'|'
    %li.issue_menu_wrap
      = link_to('MISSÕES', issue_path(Issue.last), :class => "top_level")+'|'
      -if @nav_issues.count > 2
        .issue_menu.wide.clearfix
          %ul.thumbnails
            - for issue in @nav_issues.first(2) do
              %li.issue_pane
                =link_to image_tag(issue.thumbnail), issue
                =link_to issue.name, issue
          .list
            %ul
              - for issue in @nav_issues - @nav_issues.first(2) do
                %li.issue_pane
                  =link_to raw("#{issue.name}"), issue
      -else
        .issue_menu.small.clearfix
          %ul.thumbnails
            - for issue in @nav_issues do
              %li.issue_pane
                =link_to image_tag(issue.thumbnail), issue
                =link_to raw("#{issue.name}"), issue
    %li
      =link_to('DANDO UMA FORÇA', page_path(:id => 'dando_uma_forca'), :class => "top_level", :id => "main_nav_donate")+'|'
    %li
      =link_to('NOSSO BLOG', "http://eleicoescariocas.com.br/", :class => "top_level last", :target => "_blank")
